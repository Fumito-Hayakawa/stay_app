<% if flash.notice %>
    <p class="notice"><%= flash.notice %></p>
<% end %>

<div class="top">
  <div class="top-main">
    <div class="container">
      <div class="row col-lg-6">
        <div class="form-fream">
          <div class="form-area">
            <p class="form-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>
              <%= search_form_for @q, url: search_rooms_path do |f| %>
              <%= f.search_field :address_cont, placeholder: "東京", class:"form-control mb-4" %>
              <%= f.submit '探す', class:"form-control btn-primary mb-4" %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="panel-area m-5">
      <h1 class="section-title">おすすめのエリア</h1>
      <div class="row">
        <div class="panel-item col-lg-3 col-6">
              <%= search_form_for @q, url: search_rooms_path do |f| %>
              <%= f.hidden_field :address_cont, value: "東京" %>
              <%= f.submit :class=>"img-tokyo panel-image", value: "" %>
              <% end %>
              <span>東京</span>
            <div class="shadow"></div>
        </div>
        <div class="panel-item col-lg-3 col-6">
              <%= search_form_for @q, url: search_rooms_path do |f| %>
              <%= f.hidden_field :address_cont, value: "大阪" %>
              <%= f.submit :class=>"img-osaka panel-image", value: "" %>
              <% end %>
              <span>大阪</span>
            <div class="shadow"></div>
        </div>
        <div class="panel-item col-lg-3 col-6">
              <%= search_form_for @q, url: search_rooms_path do |f| %>
              <%= f.hidden_field :address_cont, value: "京都" %>
              <%= f.submit :class=>"img-kyoto panel-image", value: "" %>
              <% end %>
              <span>京都</span>
            <div class="shadow"></div>
        </div>
        <div class="panel-item col-lg-3 col-6">
              <%= search_form_for @q, url: search_rooms_path do |f| %>
              <%= f.hidden_field :address_cont, value: "札幌" %>
              <%= f.submit :class=>"img-sapporo panel-image submit", value: "" %>
              <% end %>
              <span>札幌</span>
            <div class="shadow"></div>
        </div>
      </div>
      
    </div>
  </div>
</div>