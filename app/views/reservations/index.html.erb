<div class="container-fiuld room-posts">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
      </tr>
    </thead>
    <tbody>
        <% @reservations.each do |reservation| %>
        <tr>
            <td><%= image_tag reservation.room.image.variant(resize:'200x250').processed %></td>
            <td><%= link_to reservation.room.name, room_path(reservation.room), class:"posts-name" %></td>
            <td class="posts-content"><%= reservation.room.introduction %></td>
            <td class="price-icon"><%= reservation.total_price %></td>
            <td><%= reservation.start_date.to_s(:datetime_jp) %></td>
            <td><%= reservation.end_date.to_s(:datetime_jp) %></td>
            <td><%= reservation.created_at.to_s(:datetime_jp) %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
