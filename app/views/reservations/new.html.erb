<div class="container reservations-new">
  <div class="row">
    <div class="col-6 offset-3">
      <div class="reservations-new-nav">
        <h4 class="reservations-new-check-content">予約内容確認</h4>
        <h5 class="price-icon">
          <%= @reservation.room.price %> / 日
        </h5>
        <div class="reservations-new-date-select">
            <%= form_with model: @reservation, local: true do |f| %>
            <%= f.label :start_date, '開始日' %>
            <%= f.date_field :start_date, value: @reservation.start_date, class: 'form-control mb-4', readonly: true %>
            <%= f.label :end_date, '終了日' %>
            <%= f.date_field :end_date, value: @reservation.end_date, class: 'form-control mb-4', readonly: true %>
            <h6 class="reservations-new-check-content">
            使用日数：<%= @use_duration %>日
            </h6>
            <%= f.label :person_number, '人数' %>
            <%= f.text_field :person_number, value: @reservation.person_number, class: 'form-control mb-4', readonly: true %>
            <%= f.label :total_price, '合計金額' %>
            <%= f.text_field :total_price, value: @reservation.total_price, class: 'form-control mb-4', readonly: true %>
            <p class="reservations-new-check-content">
              上記内容でよろしければ「予約を確定」を押してください
            </p>
            <%= f.hidden_field :room_id, value: @reservation.room.id %>
            <%= f.submit "予約を確定", class:"btn btn-primary form-control my-3" %>
            <%= link_to "ルーム詳細に戻る", room_path(@reservation.room), class:"btn btn-secondary form-control" %>

            <% end %>
        </div>
      </div>
      
    </div>
  </div>
</div>