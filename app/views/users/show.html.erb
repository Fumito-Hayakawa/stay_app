<div class="container-fiuld user">
    <div class="row">
        <div class="col-lg-2 user-nav user-nav-pc d-lg-block d-none">
            <ul>
                <li class=""><a href="/users/account">アカウント</a></li>
                <li class="active"><a href="/users/profile">プロフィール</a></li>
            </ul>
        </div>
        <div class="col-lg-10 user-view">
            <div class="user-view-box">
                <div class="update-content">
                    <div class="row">
                        <h5>プロフィール</h5>
                    </div>
                </div>
                <%= form_with model: @user, class: "profile-user", local: true do |f| %>
                <div class="update-content">
                    <div class="row">
                        <div class="col-md-6 offset-md-3">
                            <div class="icon-box">
                                <% if @user.image.attached? %>
                                <%= image_tag @user.image.variant(resize:'200x200').processed, class:"icon-image host-icon" %>
                                <% else %>
                                    <img alt="アイコン画像" class="icon-image host-icon" src="../../assets/default_icon.jpg">
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <%= f.label :name, '名前', class:"col-md-3 required-a" %>
                        <%= f.text_field :name, class: "form-control mb-4 col-md-9" %>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <%= f.label :image, 'アイコン画像', class:"col-md-3 required-a" %>
                        <%= f.file_field :image, class: 'mb-4 col-md-9' %>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <%= f.label :introduction, '自己紹介', class:"col-md-3 required-a" %>
                        <%= f.text_area :introduction, class: "form-control mb-4 col-md-9", placeholder: "自己紹介を入力" %>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <%= f.submit "更新", class:"col-md-2 btn btn-primary mx-3" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>